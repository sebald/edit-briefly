{
  "name": "edit-briefly",
  "description": "Edit content inside the users preferred editor (set via `$VISUAL`/`$EDITOR`).",
  "version": "1.0.0",
  "license": "MIT",
  "repository": "sebald/edit-briefly",
  "keywords": [
    "open",
    "file",
    "temp",
    "temporary",
    "editor"
  ],
  "author": "Sebastian Sebald <sebastian.sebald@gmail.com>",
  "engines": {
    "node": ">=8"
  },
  "main": "lib/index.js",
  "files": [
    "lib"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "dependencies": {
    "@types/node": "10.12.21",
    "tempy": "0.2.1"
  },
  "devDependencies": {
    "@types/jest": "23.3.13",
    "@types/tempy": "0.2.0",
    "@typescript-eslint/eslint-plugin": "1.2.0",
    "conventional-changelog-cli": "2.0.11",
    "conventional-changelog-emojis": "2.0.0",
    "eslint": "5.13.0",
    "eslint-config-prettier": "4.0.0",
    "eslint-config-xo": "0.26.0",
    "eslint-config-xo-typescript": "0.7.0",
    "eslint-plugin-jest": "22.2.2",
    "husky": "1.3.1",
    "jest": "23.6.0",
    "prettier": "1.16.4",
    "pretty-quick": "1.10.0",
    "ts-jest": "23.10.5",
    "typescript": "3.2.4"
  },
  "scripts": {
    "start": "tsc",
    "test": "jest --config jest.config.js",
    "clean": "rm -rf lib coverage",
    "typecheck": "tsc --noEmit",
    "lint": "eslint \"src/**/*.ts\"",
    "format": "prettier --write \"src/**/*.ts\"",
    "ci": "jest --config jest.config.js --coverage",
    "version": "conventional-changelog -p emojis -i CHANGELOG.md -s -r 0 && git add CHANGELOG.md"
  }
}
